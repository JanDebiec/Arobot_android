<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
    </style>

    <style name="CodeFont" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">2sp</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="aRobotFont" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">4dp</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        </style>

    <style name="aRobotMargins" >
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        </style>

    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">2sp</item>
        <item name="android:height">32dp</item>
    </style>

    <style name="aRobotRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">4sp</item>
        <item name="android:height">32dp</item>
    </style>

    <style name="aRobotLeftRightText" parent="aRobotMargins">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>       
        
        </style>
</resources>